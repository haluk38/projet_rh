{% extends "base.twig" %}

{% block style %}
	<link rel="stylesheet" href="./css/home/addFormPage.css">
{% endblock %}

{% block main %}
<div id="container">
        <form action="/addFormPage" method="post" >
            <h2>Inscription</h2>
            <div class="form-group">
                <input type="text" id="entreprise" name="business" placeholder="Nom de l'entreprise" >
                {% if error %}
                    <p class="error">{{error.business}}</p>
                {% endif %}
            </div>
            <div class="form-group">
                <input type="text" id="siret" name="siret" placeholder="Siret" >
                {% if error %}
                    <p class="error">{{error.siret}}</p>
                {% endif %}
            </div>
            <div class="form-group"> 
                <input type="text" id="president" name="name" placeholder="Nom du prÃ©sident" >
                {% if error %}
                    <p class="error">{{error.name}}</p>
                {% endif %}
            </div>
            <div class="form-group"> 
                <input type="text" id="email" name="mail" placeholder="Email" >
                {% if error %}
                    <p class="error">{{error.mail}}</p>
                {% endif %}
            </div>
            <div class="form-group">
                <input type="password" id="password" name="password" placeholder="Mot de passe">
                {% if error %}
                    <p class="error">{{error.password}}</p>
                {% endif %}
            </div>
            <button type="submit">S'inscrire</button>
        </form>
    </div>
{% endblock %}